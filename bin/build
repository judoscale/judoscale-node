#!/bin/bash

# Exit immediately if a command exits with a non-zero status.
set -e

# Print each command before executing it:
set -x

cd node-core
npm install
npm link
npm run build

cd ../express
npm link judoscale-node-core
npm install
npm run build

cd ../fastify
npm link judoscale-node-core
npm install

cd ../bull
npm link judoscale-node-core
npm install
npm run build
